#!/usr/bin/env python3
import os
import sys
import asyncio

# Add src to path
sys.path.insert(0, os.path.abspath(os.path.join(os.path.dirname(__file__), "../../src")))

from wrapper.drivers.glm_cli import GlmCLIDriver

async def main():
    if len(sys.argv) < 2:
        # Read from stdin if no arg
        content = sys.stdin.read()
    else:
        content = sys.argv[1]

    if not content.strip():
        print("Error: No input provided", file=sys.stderr)
        sys.exit(1)

    model = os.environ.get("MITTELO_GLM_MODEL")
    driver = GlmCLIDriver(model=model)
    
    await driver.start()
    try:
        async for token in driver.chat(content, []):
            print(token, end="", flush=True)
    finally:
        await driver.stop()

if __name__ == "__main__":
    asyncio.run(main())
